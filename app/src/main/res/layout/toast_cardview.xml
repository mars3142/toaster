<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/card_base_empty_height"
        app:cardCornerRadius="4dp">

        <android.widget.Toolbar
            android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:title="@string/demo_timestamp"
            android:layout_height="?android:attr/actionBarSize" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize">

            <RelativeLayout
                android:id="@+id/backgroundColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp"
                android:background="@color/colorPrimaryDark"
                android:minHeight="@dimen/card_empty_height">

                <TextView
                    android:id="@+id/package_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="10dp"
                    tools:text="@string/demo_package" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    tools:text="@string/demo_message" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/package_icon"
                android:layout_width="@android:dimen/notification_large_icon_width"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/package_icon"
                tools:src="@drawable/ic_launcher" />

        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>